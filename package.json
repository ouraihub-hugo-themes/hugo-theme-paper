{
  "name": "hugo-paper",
  "version": "1.0.0-final",
  "description": "A minimal, responsive Hugo theme inspired by Astro Paper with interactive features, full SEO optimization, and comprehensive testing",
  "type": "module",
  "scripts": {
    "ts:build": "pnpm run ts:build:main && pnpm run ts:build:toggle",
    "ts:build:main": "esbuild assets/ts/main.ts --bundle --minify --outfile=assets/js/bundle.js --target=es2020",
    "ts:build:toggle": "esbuild assets/ts/toggle-theme.ts --bundle --minify --outfile=static/toggle-theme.js --target=es2020",
    "ts:watch": "concurrently -n \"Main,Toggle\" -c \"blue,cyan\" \"esbuild assets/ts/main.ts --bundle --watch --outfile=assets/js/bundle.js --target=es2020\" \"esbuild assets/ts/toggle-theme.ts --bundle --watch --outfile=static/toggle-theme.js --target=es2020\"",
    "ts:dev": "pnpm run ts:dev:main && pnpm run ts:dev:toggle",
    "ts:dev:main": "esbuild assets/ts/main.ts --bundle --sourcemap --outfile=assets/js/bundle.js --target=es2020",
    "ts:dev:toggle": "esbuild assets/ts/toggle-theme.ts --bundle --sourcemap --outfile=static/toggle-theme.js --target=es2020",
    "chroma:build": "esbuild scripts/generate-chroma-themed.ts --bundle --platform=node --format=esm --outfile=scripts/generate-chroma-themed.js --target=node18",
    "chroma:generate": "pnpm run chroma:build && node scripts/generate-chroma-themed.js",
    "css:build": "pnpm run chroma:generate && tailwindcss -i ./assets/css/main.css -o ./static/css/main.css --minify",
    "css:watch": "tailwindcss -i ./assets/css/main.css -o ./static/css/main.css --watch",
    "css:dev": "pnpm run chroma:generate && tailwindcss -i ./assets/css/main.css -o ./static/css/main.css",
    "dev": "concurrently -n \"TS,CSS,Hugo\" -c \"blue,green,yellow\" \"pnpm run ts:watch\" \"pnpm run css:watch\" \"hugo server --logLevel debug --disableFastRender\"",
    "dev:fast": "hugo server --logLevel debug --disableFastRender=false",
    "pagefind": "pagefind --site public",
    "build": "pnpm run ts:build && pnpm run css:build && hugo --gc && pnpm run pagefind",
    "build:dev": "pnpm run ts:dev && pnpm run css:dev && hugo && pnpm run pagefind",
    "build:minify": "pnpm run ts:build && pnpm run css:build && hugo --minify --gc",
    "preview": "pnpm run build && hugo server --disableLiveReload",
    "lint:css": "stylelint 'assets/**/*.css'",
    "lint:ts": "eslint 'assets/ts/**/*.ts'",
    "format": "prettier --write 'assets/**/*.{ts,css,html}'",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/ui": "^2.0.0",
    "@vue/test-utils": "^2.4.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.0",
    "esbuild": "^0.23.0",
    "eslint": "^9.0.0",
    "happy-dom": "^12.10.0",
    "jsdom": "^23.0.0",
    "lint-staged": "^15.2.0",
    "pagefind": "^1.4.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.0.0",
    "prettier": "^3.1.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.8.0",
    "vite": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ouraihub-hugo-themes/hugo-paper.git"
  },
  "keywords": [
    "hugo",
    "theme",
    "blog",
    "tailwind",
    "typescript"
  ],
  "author": "OurAIHub",
  "license": "MIT"
}
