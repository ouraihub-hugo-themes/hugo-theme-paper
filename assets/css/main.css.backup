@import "tailwindcss";

@custom-variant dark (&:where([data-theme=dark], [data-theme=dark] *));

:root,
html[data-theme="light"] {
  --background: #fdfdfd;
  --foreground: #282728;
  --accent: #006cac;
  --muted: #e6e6e6;
  --border: #ece9e9;
}

html[data-theme="dark"] {
  --background: #212737;
  --foreground: #eaedf3;
  --accent: #ff6b01;
  --muted: #343f60;
  --border: #ab4b08;
}

@theme inline {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --color-accent: var(--accent);
  --color-muted: var(--muted);
  --color-border: var(--border);
}

@layer base {
  :root {
    --font-family:
      "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    --font-size-base: 16px;
    --line-height-base: 1.6;
  }

  * {
    @apply border-border outline-accent/75;
    scrollbar-width: auto;
    scrollbar-color: var(--color-muted) transparent;
  }

  html {
    @apply overflow-y-scroll scroll-smooth;
  }

  body {
    @apply flex min-h-svh flex-col bg-background font-mono text-foreground selection:bg-accent/75 selection:text-background;
    font-family: var(--font-family);
    font-size: var(--font-size-base);
    line-height: var(--line-height-base);
  }

  a,
  button {
    @apply outline-offset-1 outline-accent focus-visible:no-underline focus-visible:outline-2 focus-visible:outline-dashed;
  }

  button:not(:disabled),
  [role="button"]:not(:disabled) {
    cursor: pointer;
  }

  section,
  footer {
    @apply mx-auto max-w-app px-4;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    @apply font-bold tracking-tight;
  }

  h1 {
    @apply text-4xl;
  }

  h2 {
    @apply text-3xl;
  }

  h3 {
    @apply text-2xl;
  }

  h4 {
    @apply text-xl;
  }

  h5,
  h6 {
    @apply text-lg;
  }

  a {
    @apply text-accent transition-colors duration-200;
  }

  a:hover {
    @apply text-accent;
  }

  code {
    @apply px-2 py-1 rounded font-mono text-sm;
    background-color: rgb(229 231 235 / 0.5);
    color: var(--color-accent);
  }

  html[data-theme="dark"] code {
    background-color: rgb(55 65 81 / 0.5);
    color: var(--color-accent);
  }

  pre {
    @apply p-4 rounded-lg overflow-x-auto;
    background-color: #1e293b;
    color: #e2e8f0;
  }

  html[data-theme="dark"] pre {
    background-color: #0f172a;
    color: #f1f5f9;
  }

  pre code {
    background-color: transparent;
    color: inherit;
    @apply px-0 py-0;
  }

  blockquote {
    @apply border-l-4 border-accent pl-4 italic text-muted;
  }

  button,
  input[type="button"],
  input[type="submit"] {
    @apply px-4 py-2 rounded-lg font-medium transition-all duration-200 cursor-pointer;
  }

  button:hover {
    @apply transform scale-105;
  }
}

@layer components {
  .container-wrapper {
    @apply max-w-4xl mx-auto px-4 sm:px-6 lg:px-8;
  }

  .btn-primary {
    @apply bg-accent text-background px-4 py-2 rounded-lg font-medium transition-colors duration-200;
  }

  .btn-primary:hover {
    @apply bg-accent/80;
  }

  .btn-secondary {
    @apply bg-muted text-foreground px-4 py-2 rounded-lg font-medium transition-colors duration-200;
  }

  .btn-secondary:hover {
    @apply bg-accent;
  }

  .card {
    @apply bg-background border border-border rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow duration-200;
  }

  .gradient-text {
    @apply bg-gradient-to-r from-blue-500 to-rose-500 bg-clip-text text-transparent;
  }

  .text-gradient {
    @apply bg-gradient-to-r from-blue-500 via-rose-500 to-blue-500 bg-clip-text text-transparent;
  }
}

@utility max-w-app {
  @apply max-w-3xl;
}

.active-nav {
  @apply underline decoration-wavy decoration-2 underline-offset-4;
}

@layer utilities {
  .truncate-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .truncate-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .gradient-bg {
    background: linear-gradient(
      135deg,
      rgba(14, 165, 233, 0.1),
      rgba(244, 63, 94, 0.1)
    );
  }

  .link-hover {
    @apply relative inline-block;
  }

  .link-hover::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    height: 2px;
    width: 0;
    @apply bg-accent;
    transition: width 0.3s;
  }

  .link-hover:hover::after {
    width: 100%;
  }
}

/* Source: https://piccalil.li/blog/a-more-modern-css-reset/ */
/* Anything that has been anchored to should have extra scroll margin */
:target {
  scroll-margin-block: 1rem;
}

/* Print Styles */
@media print {
  @page {
    margin: 2cm;
  }

  body {
    color: #111827;
    background-color: white;
  }

  a {
    text-decoration: none;
  }

  pre,
  code {
    background-color: #f3f4f6;
  }
}
